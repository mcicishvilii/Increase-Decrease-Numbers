<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TW_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_to_disp"
        android:layout_marginTop="300dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTN_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calc_but_plus"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TW_numbers"
        app:layout_constraintEnd_toEndOf="@id/BTN_minus"/>
    <Button
        android:id="@+id/BTN_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calc_but_minus"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/TW_numbers"
        app:layout_constraintStart_toStartOf="@id/BTN_plus"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/TW_congratsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TW_numbers"
        app:layout_constraintEnd_toEndOf="parent
"
        />




</androidx.constraintlayout.widget.ConstraintLayout>